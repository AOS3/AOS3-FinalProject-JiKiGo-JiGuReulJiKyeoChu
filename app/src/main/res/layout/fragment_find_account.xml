<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.login.FindAccountFragment">

	<com.google.android.material.appbar.MaterialToolbar
		android:id="@+id/toolbar_find_account"
		style="@style/AppToolbar"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:title="계정 찾기" />

	<com.google.android.material.tabs.TabLayout
		android:id="@+id/tab_layout_find_account"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar_find_account" />

	<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/vp_find_account"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tab_layout_find_account" />

</androidx.constraintlayout.widget.ConstraintLayout>