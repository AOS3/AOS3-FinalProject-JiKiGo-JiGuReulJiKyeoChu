<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_ranking_dialog_page_2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="걸음이 나무가 됩니다 🌳"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_ranking_dialog_page_2_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="많이 걸을수록 탄소 배출을 줄일 수 있어요!\n\n소나무 한 그루의 연간 탄소 흡수량은 8.6kg 입니다! 절감된 탄소량을 나무 그루 수로 환산해서 보여드려요. 🌱"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@android:color/black"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ranking_dialog_page_2_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="꾸준히 걸으면 더 많은 나무를 심는 효과를 낼 수 있어요!\n오늘도 힘차게 걸어볼까요? 🚶‍♂️🌳💚"
        android:textSize="14sp"
        android:lineSpacingExtra="5dp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_ranking_dialog_page_2_content_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
