<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".FindNewPwFragment">

	<TextView
		android:id="@+id/tv_find_new_pw_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="40dp"
		android:layout_marginTop="100dp"
		android:text="새 비밀번호"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:text="@string/common_star"
		android:textColor="@color/red"
		app:layout_constraintBottom_toBottomOf="@id/tv_find_new_pw_label"
		app:layout_constraintStart_toEndOf="@id/tv_find_new_pw_label"
		app:layout_constraintTop_toTopOf="@id/tv_find_new_pw_label" />


	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/et_find_new_pw"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="40dp"
		android:layout_marginTop="5dp"
		app:endIconMode="password_toggle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_find_new_pw_label">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="@string/common_pw"
			android:inputType="textPassword"
			android:maxLength="20" />
	</com.google.android.material.textfield.TextInputLayout>

	<TextView
		android:id="@+id/tv_find_new_pw_check_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="40dp"
		android:layout_marginTop="30dp"
		android:text="새 비밀번호 확인"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/et_find_new_pw" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:text="@string/common_star"
		android:textColor="@color/red"
		app:layout_constraintBottom_toBottomOf="@id/tv_find_new_pw_check_label"
		app:layout_constraintStart_toEndOf="@id/tv_find_new_pw_check_label"
		app:layout_constraintTop_toTopOf="@id/tv_find_new_pw_check_label" />


	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/et_find_new_pw_check"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="40dp"
		android:layout_marginTop="5dp"
		app:endIconMode="password_toggle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tv_find_new_pw_check_label">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:hint="@string/common_pw_check"
			android:inputType="textPassword"
			android:maxLength="20" />
	</com.google.android.material.textfield.TextInputLayout>

	<androidx.appcompat.widget.AppCompatButton
		style="@style/AppButtonPrimary.S16"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="40dp"
		android:layout_marginTop="80dp"
		android:text="새 비밀번호 설정"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/et_find_new_pw_check" />

</androidx.constraintlayout.widget.ConstraintLayout>