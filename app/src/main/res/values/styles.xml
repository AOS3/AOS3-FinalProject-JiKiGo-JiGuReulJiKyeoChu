<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:background">@drawable/selector_button_background</item>
		<item name="android:textColor">@color/selector_button_text_color</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="AppButtonPrimary.S16">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="AppButtonPrimary.S14">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="AppToolbar" parent="Widget.Material3.Toolbar">
		<item name="navigationIcon">@drawable/ic_arrow_back</item>
		<item name="titleCentered">true</item>
		<item name="android:background">@color/white</item>
	</style>

	<style name="NewsCustomTabText">
		<item name="android:textSize">16sp</item>
		<item name="android:textStyle">bold</item> <!-- 선택된 탭 글씨 굵게 -->
	</style>

	<!--  이미지 원형으로 만들기  -->
	<style name="RankingMyProfileRoundedImage" >
		<item name="cornerSize">50%</item>
	</style>

	<!-- 탭 텍스트 사이즈 -->
	<style name="TabText" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">14sp</item>
	</style>

	<!-- 커스텀 칩 -->
	<style name="customChip" parent="@style/Widget.Material3.Chip.Suggestion">
		<item name = "chipBackgroundColor">@color/selector_chip_background_color</item>
		<item name = "chipStrokeColor">@color/selector_chip_stroke_color</item>
		<item name = "android:textColor">@color/selector_chip_text_color</item>
		<item name = "android:textSize">12sp</item>
	</style>


</resources>