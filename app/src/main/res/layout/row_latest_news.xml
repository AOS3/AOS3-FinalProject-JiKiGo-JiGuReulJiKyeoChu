<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <!-- 뉴스 썸네일 -->
        <ImageView
            android:id="@+id/iv_news_besides_thumbnail"
            android:layout_width="110dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/img_today_news_home_tmp_1" />

        <!-- 뉴스 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- 뉴스 제목 (최대 1줄) -->
            <TextView
                android:id="@+id/tv_news_besides_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="뉴스 제목"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- 뉴스 내용 (최대 2줄) -->
            <TextView
                android:id="@+id/tv_news_besides_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="뉴스 요약 내용이 들어갑니다. 뉴스 요약 내용이 들어갑니다.뉴스 요약 내용이 들어갑니다."
                android:textColor="#707070"
                android:textSize="12sp" />

            <!-- 뉴스 출처 및 시간 -->
            <TextView
                android:id="@+id/tv_news_besides_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="지구일보 · 3시간 전"
                android:textColor="#707070"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9" />
</LinearLayout>


